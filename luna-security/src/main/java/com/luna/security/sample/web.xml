<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<context-param>
		<param-name>SIGN_IN_COOKIES_NAME</param-name>
		<param-value>_apoollo_s_</param-value>
	</context-param>

	<context-param>
		<param-name>LOGIN_PAGE_URL</param-name>
		<param-value>//apoollo.com/login</param-value>
	</context-param>

	<context-param>
		<param-name>LOGIN_SUCCESS_URL</param-name>
		<param-value>//apoollo.com/super/view</param-value>
	</context-param>

	<context-param>
		<param-name>LOGIN_INIT_KEY</param-name>
		<param-value>69ba1c09e383ea646b6fffe6d3388dc</param-value>
	</context-param>

	<listener>
		<listener-class>com.luna.security.SecurityListener</listener-class>
	</listener>

	<filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>com.luna.security.LoginFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
